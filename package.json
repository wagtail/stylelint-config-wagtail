{
  "name": "@wagtail/stylelint-config-wagtail",
  "version": "0.1.1",
  "description": "Shareable stylelint config for CSS and SCSS, following Wagtailâ€™s code style",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,md,css,scss,yaml,yml,json}'",
    "lint:format": "prettier --check '**/*.{js,md,css,scss,yaml,yml,json}'",
    "lint:js": "eslint ./ --max-warnings 0",
    "lint": "npm run lint:format && npm run lint:js",
    "preflight": "npm run format && npm run lint && npm run test",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wagtail/stylelint-config-wagtail.git"
  },
  "dependencies": {
    "stylelint-scss": ">=3.6.1"
  },
  "devDependencies": {
    "eslint": "^2.12.0",
    "eslint-config-wagtail": "0.1.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "jest": "24.7.1",
    "prettier": "^1.17.0",
    "stylelint": "^10.0.1"
  },
  "peerDependencies": {
    "stylelint": ">=10"
  },
  "keywords": [
    "bem",
    "config",
    "itcss",
    "lint",
    "styleguide",
    "stylelint-config",
    "stylelint",
    "wagtail"
  ],
  "author": "wagtail",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wagtail/stylelint-config-wagtail/issues"
  },
  "homepage": "https://github.com/wagtail/stylelint-config-wagtail#readme",
  "prettier": {
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "all"
  }
}
